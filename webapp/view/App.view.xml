<!-- * 컨트롤러 예제 -->


<mvc:View
  controllerName="ui5.walkthrough.controller.App"
  xmlns="sap.m"
  xmlns:mvc="sap.ui.core.mvc"
  displayBlock="true"
>
  <Shell>
    <App class="myAppDemoWT">
      <pages> <!-- index.html헤더에 모바일 기기에서 사용하는 속성들을 추가하고, 페이지간 네비게이션을 제공하는 기능-->

        <Page title="{i18n>homePageTitle}"> <!-- Page : 컨테이너 컨트롤. 여러 컨트롤을 모으는 역할 -->
          <content> <!-- content :" 컨트롤을 모으는 역할-->
            <mvc:XMLView viewName="ui5.walkthrough.view.HelloPanel"></mvc:XMLView>
            <mvc:XMLView
              viewName="ui5.walkthrough.view.InvoiceList" />
          </content>
        </Page>

      </pages>
    </App>
  </Shell>

</mvc:View>