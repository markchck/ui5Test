<core:FragmentDefinition
  xmlns="sap.m"
  xmlns:core="sap.ui.core"
>
  <Dialog
    id="helloDialog"
    title="Hello {/recipient/name}"
  >
    <content>
      <core:Icon
        src="sap-icon://hello-world"
        size="3rem"
        class="sapUiSmallMargin"
      />
    </content>
    <beginButton>
      <Button text="{i18n>dialogCloseButtonText}"
        press=".onCloseDialog" />
    </beginButton>
  </Dialog>
</core:FragmentDefinition>